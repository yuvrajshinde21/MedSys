<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard | MedSys+</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <style>
        body {
            padding-top: 56px;
            background-color: #f5f6fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            height: calc(100vh - 56px);
            position: fixed;
            top: 56px;
            left: 0;
            width: 250px;
            background: #000428;
            /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #004e92, #000428);
            /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #004e92, #000428);
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

            overflow-y: auto;
            border-right: 1px solid #ced4da;
            padding: 20px 15px;
        }

        .main-content {
            margin-left: 250px;
            padding: 30px 40px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
            color: white;
            padding: 10px 12px;
            border-radius: 8px;
            transition: background-color 0.2s ease-in-out;
            text-decoration: none;
            font-size: 16px;
        }

        .nav-link:hover {
            background-color: #d6d8db;
            color: white;
            text-decoration: none;
        }

        .nav .collapse .nav-link {
            font-weight: 500;
            font-size: 15px;
            padding-left: 30px;
        }

        .nav-item+.nav-item {
            margin-top: 10px;
        }

        .sidebar .nav-link.text-danger:hover {
            background-color: #f8d7da;
        }

        h2 {
            font-weight: 700;
            margin-bottom: 30px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('partials/header') %>

        <!-- Sidebar -->
        <div class="sidebar">
            <ul class="nav flex-column">

                <!-- Doctor Section -->
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" href="#doctorMenu" role="button"
                        aria-expanded="false" aria-controls="doctorMenu">
                        <i class="fas fa-user-md"></i> Doctor
                    </a>
                    <div class="collapse" id="doctorMenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/addDoctor">
                                    <i class="fas fa-user-plus"></i> Add Doctor
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/viewDoctors">
                                    <i class="fas fa-eye"></i> View Doctor
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <!-- Reception Section -->
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="collapse" href="#receptionMenu" role="button"
                        aria-expanded="false" aria-controls="receptionMenu">
                        <i class="fas fa-concierge-bell"></i> Reception
                    </a>
                    <div class="collapse" id="receptionMenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/registerReception">
                                    <i class="fas fa-user-plus"></i> Add Reception
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/viewReception">
                                    <i class="fas fa-eye"></i> View Reception
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <!-- Patients -->
                <li class="nav-item">
                    <a class="nav-link" href="/admin/dashboard?page=view-patients">
                        <i class="fas fa-users"></i> View Patients
                    </a>
                </li>

                <!-- Logout -->
                <li class="nav-item">
                    <a class="nav-link text-danger" href="/auth/logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <main class="main-content">
            <h2>Welcome, Admin</h2>
            <% if (partialToInclude) { %>
                <%- include(main_Content) %>
                    <% } %>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>