<%- include('../partials/header') %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
          <h3 class="text-primary text-center mb-4">All Medicines</h3>

          <% if (medicines.length === 0) { %>
            <p class="text-center text-muted">No medicines found.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-striped table-bordered align-middle">
                <thead class="table-primary">
                  <tr>
                    <th>#ID</th>
                    <th>Medicine Name</th>
                    <th>Price (₹)</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% medicines.forEach(med => { %>
                    <tr>
                      <td><%= med.medicine_id %></td>
                      <td><%= med.medicine_name %></td>
                      <td>₹<%= parseFloat(med.price).toFixed(2) %></td>
                      <td>
                        <form action="/reception/medicines/delete/<%= med.medicine_id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this medicine?');">
                          <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>

          <div class="text-end mt-3">
            <a href="/reception/medicines/add" class="btn btn-success">
              <i class="bi bi-plus-lg me-1"></i> Add New Medicine
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
