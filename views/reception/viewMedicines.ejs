<%- include('../partials/header') %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">

          <!-- Title + Add Button -->
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary mb-0">üíä All Medicines</h3>
            <a href="/reception/medicines/add" class="btn btn-outline-success">
              <i class="bi bi-plus-lg me-1"></i> Add Medicine
            </a>
          </div>

          <!-- Medicine Table -->
          <% if (medicines.length === 0) { %>
            <p class="text-center text-muted">No medicines found.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-primary">
                  <tr>
                    <th>üÜî ID</th>
                    <th>üíä Name</th>
                    <th>üí∞ Price (‚Çπ)</th>
                    <th>‚öôÔ∏è Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% medicines.forEach(med => { %>
                    <tr>
                      <td><%= med.medicine_id %></td>
                      <td><%= med.medicine_name %></td>
                      <td>‚Çπ<%= parseFloat(med.price).toFixed(2) %></td>
                      <td>
                        <form action="/reception/medicines/delete/<%= med.medicine_id %>" method="POST"
                              onsubmit="return confirm('Are you sure you want to delete this medicine?');"
                              class="d-inline">
                          <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash-fill"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } %>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
