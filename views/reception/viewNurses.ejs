<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <main class="col-lg-10 px-md-4">

      <!-- Title + Add Nurse Button -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary mb-0">
          🧑‍⚕️ Nurse Management
        </h2>
        <a href="/reception/nurses/new" class="btn btn-outline-success px-3 rounded-pill">
          ➕ Add New Nurse
        </a>
      </div>

      <!-- Nurse Table -->
      <div class="table-responsive bg-white rounded-4 p-4 shadow-sm border">
        <table class="table table-hover table-bordered align-middle text-center mb-0">
          <thead class="table-primary">
            <tr>
              <th>🆔 Nurse ID</th>
              <th>👩‍⚕️ Name</th>
              <th>📞 Contact</th>
              <th>⏰ Shift</th>
              <th>⚙️ Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (nurses && nurses.length > 0) { %>
              <% nurses.forEach(nurse => { %>
                <tr>
                  <td><%= nurse.nurse_id %></td>
                  <td><%= nurse.nurse_name %></td>
                  <td><%= nurse.nurse_contact %></td>
                  <td><%= nurse.nurse_shift %></td>
                  <td>
                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                      <a href="/reception/nurse/edit/<%= nurse.nurse_id %>" 
                         class="btn btn-sm btn-outline-primary" 
                         title="Edit Nurse">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                      </a>
                      <a href="/reception/nurse/delete/<%= nurse.nurse_id %>" 
                         class="btn btn-sm btn-outline-danger" 
                         title="Delete Nurse"
                         onclick="return confirm('Are you sure you want to delete this nurse?');">
                        <i class="bi bi-trash-fill me-1"></i> Delete
                      </a>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-muted text-center">No nurses found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

    </main>
  </div>
</div>
