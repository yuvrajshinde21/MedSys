<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <main class="col-lg-10 px-md-4">
      <h2 class="mb-4 text-primary text-center"><%= title %></h2>

      <div class="table-responsive bg-white rounded-4 p-4 shadow-sm border">
        <table class="table table-hover table-bordered align-middle text-center">
          <thead class="table-primary">
            <tr>
              <th>Nurse ID</th>
              <th>Nurse Name</th>
              <th>Contact</th>
              <th>Shift</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (nurses && nurses.length > 0) { %>
              <% nurses.forEach(nurse => { %>
                <tr>
                  <td><%= nurse.nurse_id %></td>
                  <td><%= nurse.nurse_name %></td>
                  <td><%= nurse.nurse_contact %></td>
                  <td><%= nurse.nurse_shift %></td>
                  <td>
                    <a href="/reception/nurse/edit/<%= nurse.nurse_id %>" class="btn btn-sm btn-outline-primary">
                      <i class="bi bi-pencil-square"></i>
                    </a>
                    <a href="/reception/nurse/delete/<%= nurse.nurse_id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this nurse?');">
                      <i class="bi bi-trash"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-muted">No nurses found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="text-center mt-4">
        <a href="/reception/nurses/new" class="btn btn-outline-success px-4">
          <i class="bi bi-plus-circle"></i> Add New Nurse
        </a>
      </div>
    </main>
  </div>
</div>
