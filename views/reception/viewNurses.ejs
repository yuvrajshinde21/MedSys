<div class="container-fluid py-4">
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <h2 class="mb-4 mt-5 text-primary">
      <%= title %>
    </h2>

    <div class="bg-white p-4 rounded-4 shadow-sm border">
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center mb-0">
          <thead class="table-primary">
            <tr>
              <th scope="col">Nurse ID</th>
              <th scope="col">Name</th>
              <th scope="col">Contact</th>
              <th scope="col">Shift</th>
            </tr>
          </thead>
          <tbody>
            <% if (nurses.length > 0) { %>
              <% nurses.forEach(nurse => { %>
                <tr>
                  <td><%= nurse.nurse_id %></td>
                  <td><%= nurse.nurse_name %></td>
                  <td><%= nurse.nurse_contact %></td>
                  <td><%= nurse.nurse_shift %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-muted">No nurses found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="text-center mt-4">
        <a href="/reception/nurse/add" class="btn btn-outline-primary px-4">
          <i class="bi bi-plus-circle me-1"></i> Add New Nurse
        </a>
      </div>
    </div>
  </main>
</div>
