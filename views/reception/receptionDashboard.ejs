<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reception Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 56px;
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            top: 56px;
            left: 0;
            width: 250px;
            background-color: whitesmoke;
            color: black;
            overflow-y: auto;
        }

        .sidebar a {
            color: black;
            text-decoration: none;
            font-weight: 500;
            font-size: 1.2rem;
        }

        /* .sidebar .nav-link:hover {
      background-color: #495057;
    } */
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('../partials/header') %>


        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column p-3">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#patientsMenu" role="button"
                        aria-expanded="false">
                        <i class="bi bi-person-fill"></i> Patients
                    </a>
                    <div class="collapse" id="patientsMenu">
                        <ul class="btn-toggle-nav list-unstyled ps-3">
                            <li><a href="/reception/patients/create" class="nav-link">Add</a></li>
                            <li><a href="/reception/patients" class="nav-link">View</a></li>
                            <li><a href="#" class="nav-link">Bill</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#roomMenu" role="button" aria-expanded="false">
                        <i class="bi bi-door-closed-fill"></i> Room
                    </a>
                    <div class="collapse" id="roomMenu">
                        <ul class="btn-toggle-nav list-unstyled ps-3">
                            <li><a href="/reception/rooms/new" class="nav-link">Add</a></li>
                            <li><a href="/reception/rooms" class="nav-link">View</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#nurseMenu" role="button" aria-expanded="false">
                        <i class="bi bi-person-badge-fill"></i> Nurse
                    </a>
                    <div class="collapse" id="nurseMenu">
                        <ul class="btn-toggle-nav list-unstyled ps-3">
                            <li><a href="/reception/nurses/new" class="nav-link">Add</a></li>
                            <li><a href="/reception/nurses" class="nav-link">View</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#medicineMenu" role="button"
                        aria-expanded="false">
                        <i class="bi bi-capsule"></i> Medicine
                    </a>
                    <div class="collapse" id="medicineMenu">
                        <ul class="btn-toggle-nav list-unstyled ps-3">
                            <li><a href="#" class="nav-link">Add</a></li>
                            <li><a href="#" class="nav-link">View</a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <% if(typeof main_content !=="undefined" ) { %>
                <%- include(main_content) %>
                    <% } %>
        </div>
        <!-- Error Message -->
        <% if (typeof message !=='undefined' && message) { %>
            <div id="simpleToast" class="position-fixed bottom-0 end-0 p-3 m-3 bg-info text-white rounded shadow"
                style="z-index:1055; min-width: 250px;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <%= message %>
                    </div>
                    <button type="button" class="btn-close btn-close-white ms-3"
                        onclick="document.getElementById('simpleToast').remove()"></button>
                </div>
            </div>
            <% } %>
                <script>
                    setTimeout(() => {
                        const toast = document.getElementById('simpleToast');
                        if (toast) toast.remove();
                    }, 3000); 
                </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        
</body>

</html>