<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <main class="col-lg-11 px-md-4">
      <h2 class="mb-4 text-primary text-center"><%= title %></h2>

      <div class="table-responsive bg-white rounded-4 p-4 shadow-sm border">
        <table class="table table-hover table-bordered align-middle text-center">
          <thead class="table-primary">
            <tr>
              <th>Room No</th>
              <th>Room Type</th>
              <th>Status</th>
              <th>Charges Per Day (₹)</th>
            </tr>
          </thead>
          <tbody>
            <% if (rooms.length > 0) { %>
              <% rooms.forEach(room => { %>
                <tr>
                  <td><%= room.room_no %></td>
                  <td><%= room.room_type %></td>
                  <td>
                    <span class="badge bg-<%= room.room_status === 'Available' ? 'success' : 'danger' %>">
                      <%= room.room_status %>
                    </span>
                  </td>
                  <td>₹<%= room.charges_per_day %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-muted text-center">No rooms found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="text-center mt-4">
        <a href="/reception/room/add" class="btn btn-outline-primary px-4">
          <i class="bi bi-plus-circle"></i> Add New Room
        </a>
      </div>
    </main>
  </div>
</div>
