<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <main class="col-lg-11 px-md-4">
      <h2 class="mb-4 text-primary text-center">
        <%= title %>
      </h2>

      <div class="table-responsive bg-blu rounded-4 p-4 shadow-sm border">
        <table class="table table-hover table-bordered align-middle text-center">
          <thead class="table-primary">
            <tr>
              <th>Room No</th>
              <th>Room Type</th>
              <th>Status</th>
              <th>Charges Per Day (₹)</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (rooms.length> 0) { %>
              <% rooms.forEach(room=> { %>
                <tr>
                  <td>
                    <%= room.room_no %>
                  </td>
                  <td>
                    <%= room.room_type %>
                  </td>
                  <td>
                    <span class="badge bg-<%= room.room_status === 'Available' ? 'success' : 'danger' %>">
                      <%= room.room_status %>
                    </span>
                  </td>
                  <td>₹<%= room.charges_per_day %>
                  </td>
                  <td>
                    <a href="/reception/rooms/edit/<%= room.room_no %>" class="btn btn-sm btn-outline-secondary me-1"
                      title="Edit">
                      <i class="bi bi-pencil-square"></i>
                    </a>
                    <a href="/reception/rooms/delete/<%= room.room_no %>" class="btn btn-sm btn-outline-danger"
                      title="Delete" onclick="return confirm('Are you sure you want to delete this room?');">
                      <i class="bi bi-trash-fill"></i>
                    </a>
                  </td>
                </tr>
                <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="5" class="text-muted text-center">No rooms found.</td>
                    </tr>
                    <% } %>
          </tbody>
        </table>
      </div>

      <div class="text-center mt-4">
        <a href="/reception/rooms/new" class="btn btn-outline-primary px-4">
        ➕ Add New Room
        </a>
      </div>
    </main>
  </div>
</div>