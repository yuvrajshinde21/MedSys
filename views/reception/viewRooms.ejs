<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <main class="col-lg-11 px-md-4">

      <!-- Title + Add Button -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary mb-0">
          üè® Room Management
        </h2>
        <a href="/reception/rooms/new" class="btn btn-outline-primary px-3 rounded-pill">
          ‚ûï Add New Room
        </a>
      </div>

      <!-- Table Card -->
      <div class="bg-light p-4 rounded-4 shadow-sm border">
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle text-center mb-0">
            <thead class="table-primary">
              <tr>
                <th>üî¢ Room No</th>
                <th>üè∑Ô∏è Room Type</th>
                <th>üìä Status</th>
                <th>üí∞ Charges/Day (‚Çπ)</th>
                <th>üõ†Ô∏è Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (rooms.length > 0) { %>
                <% rooms.forEach(room => { %>
                  <tr>
                    <td class="fw-semibold"><%= room.room_no %></td>
                    <td><%= room.room_type %></td>
                    <td>
                      <span class="badge px-3 py-2 bg-<%= room.room_status === 'Available' ? 'success' : 'danger' %>">
                        <%= room.room_status %>
                      </span>
                    </td>
                    <td>‚Çπ<%= parseFloat(room.charges_per_day).toFixed(2) %></td>
                    <td>
                      <div class="d-flex justify-content-center gap-2 flex-wrap">
                        <a href="/reception/rooms/edit/<%= room.room_no %>" 
                           class="btn btn-sm btn-outline-secondary" 
                           title="Edit">
                          <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>
                        <a href="/reception/rooms/delete/<%= room.room_no %>" 
                           class="btn btn-sm btn-outline-danger" 
                           onclick="return confirm('Are you sure you want to delete this room?');"
                           title="Delete">
                          <i class="bi bi-trash-fill me-1"></i> Delete
                        </a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="text-muted text-center">No rooms found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

    </main>
  </div>
</div>
