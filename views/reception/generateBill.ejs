<%- include('../partials/header') %>

<style>
  .bill-header h2 {
    font-size: 2rem;
    color: #0d6efd;
  }

  .bill-section {
    background-color: #f9f9f9;
    border-radius: 10px;
    padding: 1rem;
    margin-bottom: 1.5rem;
  }

  .table th, .table td {
    vertical-align: middle;
  }

  @media print {
    .btn {
      display: none;
    }

    body {
      background: white !important;
    }

    .card {
      box-shadow: none !important;
      border: none !important;
    }
  }
</style>

<div class="container py-4">
  <div class="card shadow rounded-4 border-0">
    <div class="card-body">

      <!-- Header -->
      <div class="text-center mb-4 bill-header">
        <h2 class="fw-bold">MedSys+</h2>
        <p class="mb-0">Contact: +91-9876543210</p>
        <h4 class="mt-3">Patient Bill</h4>
      </div>

      <!-- Patient & Doctor Info -->
      <div class="row bill-section">
        <div class="col-md-6">
          <h6 class="text-decoration-underline">Patient Details</h6>
          <p><strong>Name:</strong> <%= patient.patient_name %></p>
          <p><strong>Age:</strong> <%= patient.patient_age %></p>
          <p><strong>Gender:</strong> <%= patient.patient_gender %></p>
          <p><strong>Contact:</strong> <%= patient.patient_contact %></p>
        </div>
        <div class="col-md-6">
          <h6 class="text-decoration-underline">Doctor Details</h6>
          <p><strong>Name:</strong> <%= doctor.doctor_name %></p>
          <p><strong>Specialization:</strong> <%= doctor.specialization %></p>
          <p><strong>Appointment Date:</strong> <%= new Date(appointment.appointment_date).toLocaleString() %></p>
          <p><strong>Issue:</strong> <%= appointment.patient_issue %></p>
        </div>
      </div>

      <hr>

      <!-- Charges Table -->
      <div class="table-responsive bill-section">
        <table class="table table-bordered align-middle">
          <thead class="table-primary">
            <tr>
              <th>Item</th>
              <th>Details</th>
              <th>Price (₹)</th>
            </tr>
          </thead>
          <tbody>
            <!-- Room Charges -->
            <tr>
              <td>Room Charges</td>
              <td>
                <%= room.room_type %> Room - No: <%= room.room_no %> 
                (<%= roomDays %> day<%= roomDays > 1 ? 's' : '' %>)
              </td>
              <td><%= roomTotal.toFixed(2) %></td>
            </tr>

            <!-- Doctor Charges -->
            <tr>
              <td>Doctor Charges</td>
              <td><%= doctor.doctor_name %> Consultation</td>
              <td>₹500.00</td>
            </tr>

            <!-- Nurse Charges -->
            <tr>
              <td>Nurse Charges</td>
              <td><%= nurse.nurse_name %> - <%= nurse.shift %> Shift</td>
              <td><%= nurse.charge.toFixed(2) %></td>
            </tr>

            <!-- Medicines -->
            <% prescriptions.forEach((p, i) => { %>
              <tr>
                <td>Medicine <%= i + 1 %></td>
                <td><%= p.medicine_name %> (Qty: <%= p.quantity %>, Dosage: <%= p.dosage %>)</td>
                <td><%= (p.price * p.quantity).toFixed(2) %></td>
              </tr>
            <% }) %>

            <!-- Total Amount -->
            <tr class="table-success">
              <th colspan="2" class="text-end">Total Amount</th>
              <th>
                ₹<%= (
                  roomTotal +
                  500 +
                  nurse.charge +
                  prescriptions.reduce((sum, p) => sum + p.price * p.quantity, 0)
                ).toFixed(2) %>
              </th>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Print Button -->
      <div class="text-end mt-3">
        <button class="btn btn-primary" onclick="window.print()">
          <i class="bi bi-printer"></i> Print Bill
        </button>
      </div>

    </div>
  </div>
</div>

<%- include('../partials/footer') %>
