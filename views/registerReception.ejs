<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Register Receptionist | MedSys+</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/admin.css" />
  <style>
    body {
      background-color: #f4f6f9;
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }

    /* Layout container with sidebar + main content */
    .layout {
      display: flex;
      min-height: 100vh;
    }

    /* Sidebar width assumed fixed at 250px */
    .sidebar {
      width: 250px;
      /* The sidebar partial presumably sets its own styles */
    }

    .main-content {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 2.5rem 1rem;
      background: transparent;
    }

    .form-container {
      background: #fff;
      padding: 2rem 2.5rem;
      border-radius: 0.625rem;
      box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 600px;
    }

    h3 {
      font-weight: 700;
      margin-bottom: 1.25rem;
      color: #007bff;
      display: flex;
      align-items: center;
      gap: 0.625rem;
    }

    label {
      font-weight: 600;
    }

    .btn {
      width: 100%;
      font-weight: 600;
    }

    .icon {
      color: #007bff;
    }
  </style>
</head>

<body>

  <!-- Header -->
  <%- include('partials/header') %>

  <div class="layout">
    <!-- Sidebar -->
    <div class="sidebar">
      <%- include('partials/sidebar') %>
    </div>

    <!-- Main Content -->
    <main class="main-content">
      <div class="form-container">
        <form action="/register/reception" method="POST" novalidate>
          <h3>
            <i class="fas fa-concierge-bell icon"></i>
            Register Receptionist
          </h3>

          <div class="mb-3">
            <label for="reception_name"><i class="fas fa-id-badge icon"></i> Receptionist Name</label>
            <input id="reception_name" type="text" name="reception_name" class="form-control" required />
          </div>

          <div class="mb-3">
            <label for="reception_contact"><i class="fas fa-phone icon"></i> Contact</label>
            <input id="reception_contact" type="tel" name="reception_contact" class="form-control" required />
          </div>

          <div class="mb-3">
            <label for="status"><i class="fas fa-toggle-on icon"></i> Status</label>
            <select id="status" name="status" class="form-select" required>
              <option value="" disabled selected>Select status</option>
              <option value="Active">Active</option>
              <option value="Inactive">Inactive</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="user_id"><i class="fas fa-user icon"></i> User ID</label>
            <input id="user_id" type="number" name="user_id" class="form-control" required min="1" />
          </div>

          <div class="mb-3">
            <label for="admin_id"><i class="fas fa-user-shield icon"></i> Admin ID</label>
            <input id="admin_id" type="number" name="admin_id" class="form-control" required min="1" />
          </div>

          <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i> Register Receptionist
          </button>
        </form>
      </div>
    </main>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
