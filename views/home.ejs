      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      display: flex;
      justify-content: center;
      gap: 15px;
    }

    .navbar-brand img {
      margin-left: 100px;
      border-radius: 50%;
      /* Make the logo circular */
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .navbar-brand img:hover {
      transform: scale(1.1);
      box-shadow: 0 0 8px rgba(255, 255, 255, 0.7);
    }

    .navbar .nav-link {
      color: #060606 !important;
    }

    .navbar .nav-link:hover {
      color: hsl(63, 100%, 51%) !important;
    }

    /* Header */
    header {
      background: linear-gradient(to right, #007bff, #00c6ff);
      color: #fff;
      text-align: center;
      padding: 100px 20px 60px;
      position: relative;
    }

    .header-content {
      background: rgba(255, 255, 255, 0.9);
      border-radius: 15px;
      padding: 30px;
      max-width: 800px;
      margin: 0 auto;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      transform: translateY(50px);
    }

    header h1 {
      font-weight: bold;
      font-size: 2.5rem;
      margin-bottom: 10px;
      color: #007bff;
    }

    header p {
      font-size: 1.2rem;
      margin: 0 0 20px;
      color: #555;
    }

    /* Section spacing */
    section {
      padding: 60px 20px;
      text-align: center;
    }

    /* Section Colors */
    #about {
      background-color: #e9f7ef;
    }

    #features {
      background-color: #f0f8ff;
    }

    #bhms {
      background-color: #fef9e7;
    }

    #bhms-details {
      background-color: #f8f9fa;
    }

    #contact {
      background-color: #e8f0fe;
    }

    /* Section Headings */
    section h2 {
      color: #007bff;
      font-weight: bold;
      border-bottom: 3px solid #007bff;
      display: inline-block;
      padding-bottom: 5px;
      margin-bottom: 30px;
    }

    /* Cards */
    .feature-card {
      background: #fff;
      border: none;
      padding: 20px;
      min-height: 200px;
      margin-bottom: 30px;
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
      color: #007bff;
    }

    .card-text {
      color: #555;
    }

    /* Footer */
    footer {
      background: #343a40;
      color: #fff;
      padding: 20px 0;
      text-align: center;
    }

    footer p {
      margin: 0;
    }

    /* Buttons */
    .btn-primary {
      background-color: #007bff;
      border: none;
    }

    .btn-primary:hover {
      background-color: #0056b3;
    }

    .display-4 {
      margin-top: 50px;
      color: #f8f9fa;
    }

    /* Images */
    .carousel-item img {
      max-height: 500px;
      object-fit: cover;
      width: 100%;
    }

    .img-fluid {
      max-width: 50%;
      height: 50%;
      border-radius: 10px;
      /* remove circle if not needed */
      display: block;
      margin: 0 auto 20px;
      /* center images and give bottom space */
    }


    /* Utility */
    .text-center {
      text-align: center;
    }

    /* Spacing between header and section */
    header+section {
      margin-top: 30px;
    }

    .navbar-nav .nav-link {
      position: relative;
      padding: 8px 15px;
      transition: all 0.3s ease;
    }

    .navbar-nav .nav-link:hover {
      color: #0d6efd;
      /* Bootstrap Primary Color */
    }

    .navbar-nav .nav-link::after {
      content: '';
      position: absolute;
      width: 0%;
      height: 2px;
      left: 0;
      bottom: 0;
      background-color: #0d6efd;
      transition: 0.3s;
    }

    .navbar-nav .nav-link:hover::after {
      width: 100%;
    }

    .navbar-nav .nav-link i {
      transition: transform 0.3s ease;
    }

    .navbar-nav .nav-link:hover i {
      transform: scale(1.2);
    }
