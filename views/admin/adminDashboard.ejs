<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard | MedSys+</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/adminDashboard.css">
</head>

<body>
    <!-- Header/Navbar -->
    <%- include('../partials/header') %>

        <!-- Sidebar -->
        <div class="sidebar">
            <ul class="nav flex-column">
                <!-- Doctor -->
                <li class="nav-item">
                    <span class="nav-link"><i class="fas fa-user-md"></i> Doctor</span>
                    <ul class="nav flex-column ps-3">
                        <li class="nav-item">
                            <a class="nav-link sub-link" href="/admin/doctor">
                                <i class="fas fa-user-plus"></i> Add Doctor
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sub-link" href="/admin/doctors">
                                <i class="fas fa-eye"></i> View Doctors
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Reception -->
                <li class="nav-item mt-3">
                    <span class="nav-link"><i class="fas fa-concierge-bell"></i> Reception</span>
                    <ul class="nav flex-column ps-3">
                        <li class="nav-item">
                            <a class="nav-link sub-link" href="/admin/reception">
                                <i class="fas fa-user-plus"></i> Add Reception
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sub-link" href="/admin/receptions">
                                <i class="fas fa-eye"></i> View Reception
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Patients -->
                <li class="nav-item mt-3">
                    <a class="nav-link" href="#">
                        <i class="fas fa-users"></i> View Patients
                    </a>
                </li>

                <!-- Logout -->
                <li class="nav-item mt-3">
                    <a class="nav-link text-danger" href="/auth/logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <main class="main-content">
            <% if (typeof main_content !=='undefined' && main_content) { %>
                <%- include(main_content) %>
                    <% } else { %>
                        <div class="welcome-card">
                            <h2>Welcome, Admin ðŸ‘‹</h2>
                            <p class="lead">Use the sidebar to manage doctors, receptionists, and patients. Customize
                                your hospital workflows efficiently with MedSys+.</p>
                            <a href="/admin/doctor" class="btn btn-accent">Add Doctor</a>
                        </div>
                        <% } %>
        </main>
        <!-- Error Message -->
        <% if (typeof errorMessage !=='undefined' && errorMessage) { %>
            <div id="simpleToast" class="position-fixed bottom-0 end-0 p-3 bg-info text-white rounded shadow"
                style="z-index:1055; min-width: 250px;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <%= errorMessage %>
                    </div>
                    <button type="button" class="btn-close btn-close-white ms-3"
                        onclick="document.getElementById('simpleToast').remove()"></button>
                </div>
            </div>            
            <% } %>
            <script src="/script/adminDashboard.js"></script>
</body>

</html>