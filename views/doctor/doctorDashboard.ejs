<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Doctor Dashboard | MedSys+</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    :root {
      --sidebar-width: 16rem;
      --sidebar-bg: #e6f2ff;
      --sidebar-hover: #cfe6ff;
      --sidebar-active-bg: #bfdfff;
      --sidebar-text: #0d6efd;
      --nav-font-size: 1.1rem;
    }

    body {
      margin: 0;
      padding-top: 3.5rem;
      font-family: system-ui, sans-serif;
      background-color: #f8f9fa;
      color: #212529;
    }

    .sidebar {
      position: fixed;
      top: 3.5rem;
      left: 0;
      height: 100vh;
      width: var(--sidebar-width);
      background-color: var(--sidebar-bg);
      padding: 1rem;
      overflow-y: auto;
      box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
    }

    .sidebar .nav-link {
      color: var(--sidebar-text);
      font-weight: 600;
      font-size: var(--nav-font-size);
      padding: 0.5em 0.75em;
      display: block;
      border-radius: 0.5em;
      text-decoration: none;
      transition: background-color 0.3s ease;
      cursor: pointer;
    }

    .sidebar .nav-link:hover {
      background-color: var(--sidebar-hover);
      color: #004085;
    }

    .dropdown-item-wrapper {
      position: relative;
    }

    .submenu {
      display: none;
      padding-left: 1.5rem;
      margin-top: 0.3rem;
      list-style: none;
    }

    .dropdown-item-wrapper:hover .submenu {
      display: block;
    }

    .submenu li a {
      font-weight: 500;
      font-size: 1rem;
      padding: 0.35em 0.75em;
      border-radius: 0.4em;
      color: var(--sidebar-text);
      text-decoration: none;
      display: block;
    }

    .submenu li a:hover {
      background-color: var(--sidebar-hover);
      color: #003366;
    }

    .main-content {
      margin-left: var(--sidebar-width);
      padding: 2rem;
      min-height: calc(100vh - 3.5rem);
      background-color: #fff;
      box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.03);
      border-radius: 0.5rem;
    }

    @media (max-width: 768px) {
      .sidebar {
        position: relative;
        top: 0;
        width: 100%;
        height: auto;
        box-shadow: none;
      }

      .main-content {
        margin-left: 0;
        padding: 1.5rem 1rem;
      }
    }
  </style>
</head>

<body>

  <!-- Header -->
  <%- include('../partials/header') %>

  <!-- Sidebar -->
  <nav class="sidebar d-flex flex-column" aria-label="Doctor sidebar navigation">
    <ul class="nav flex-column">
      <!-- Appointments -->
      <li class="nav-item dropdown-item-wrapper">
        <span class="nav-link"><i class="bi bi-calendar2-week me-2"></i>Appointments</span>
        <ul class="submenu list-unstyled">
          <li><a href="/doctor/appointments/scheduled" class="nav-link">üìÖ Scheduled</a></li>
          <li><a href="/doctor/admitted-patients" class="nav-link">üè• Admitted</a></li>
          <li><a href="/doctor/patients-history" class="nav-link">üìñ History</a></li>
        </ul>
      </li>

      <!-- Medicine -->
      <li class="nav-item dropdown-item-wrapper mt-3">
        <span class="nav-link"><i class="bi bi-capsule me-2"></i>Medicine</span>
        <ul class="submenu list-unstyled">
          <li><a href="/doctor/medicine/add" class="nav-link">‚ûï Add</a></li>
          <li><a href="/doctor/medicine/view" class="nav-link">üëÅÔ∏è View</a></li>
        </ul>
      </li>

      <!-- Logout -->
      <li class="nav-item mt-3">
        <a href="/auth/logout" class="nav-link text-danger"><i class="bi bi-box-arrow-right me-2"></i>Logout</a>
      </li>
    </ul>
  </nav>

  <!-- Main Content -->
  <main class="main-content">
    <% if (typeof main_content !== 'undefined' && main_content) { %>
      <%- include(main_content) %>
    <% } else { %>
      <h4 class="text-primary">Welcome, Doctor üë®‚Äç‚öïÔ∏è</h4>
      <p class="text-muted">Manage your appointments, prescribe medicines, and track patient records with MedSys+.</p>
    <% } %>
  </main>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script/errorMessage.js"></script>

</body>

</html>
